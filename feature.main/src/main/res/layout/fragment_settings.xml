<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/SettingsTitle"
            android:text="City" />

        <Button
            android:id="@+id/fragment_settings_from"
            style="@style/SettingsButton"
            android:text="Select city" />

        <TextView
            style="@style/SettingsTitle"
            android:text="Provider" />

        <Button
            android:id="@+id/fragment_settings_to"
            style="@style/SettingsButton"
            android:text="Select provider" />

        <TextView
            style="@style/SettingsTitle"
            android:text="Notification" />

        <lac.core.feature.core.widget.SwitcherView
            android:id="@+id/fragment_settings_notification"
            style="@style/SettingsSwitch" />

        <TextView
            style="@style/SettingsTitle"
            android:text="Other" />

        <Button
            android:id="@+id/fragment_settings_feedback"
            style="@style/SettingsButton"
            android:text="Send Feedback" />

        <Button
            android:id="@+id/fragment_settings_share"
            style="@style/SettingsButton"
            android:text="Share with Friends" />

        <Button
            android:id="@+id/fragment_settings_apps"
            style="@style/SettingsButton"
            android:text="Other applications" />

        <TextView
            android:id="@+id/fragment_settings_version"
            style="@style/SettingsText"
            android:text="1.0.0" />
    </LinearLayout>

</ScrollView>
