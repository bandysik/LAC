<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lac.feature.main">

    <application>
        <activity
            android:name="lac.feature.main.app.home.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lac.feature.main.app.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="lac.feature.main.app.home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lac.feature.main.app.home.HomeActivity" />
        </activity>
        <activity android:name="lac.feature.main.app.notification.NotificationActivity">
            <intent-filter>
                <action android:name="push_notification" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
